{
  "name": "blackjack-helper-vision",
  "version": "1.0.0",
  "description": "Offline blackjack helper with computer vision using OpenCV",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "blackjack",
    "opencv",
    "electron",
    "vision",
    "card-detection"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "opencv4nodejs": "^6.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.blackjack.helper.vision",
    "productName": "Blackjack Helper Vision",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "index.html",
      "style.css",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
