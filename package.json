{
  "name": "blackjack-helper-desktop",
  "version": "1.0.0",
  "description": "Blackjack Helper Desktop Application - A real-time assistant for online blackjack players",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "blackjack",
    "strategy",
    "calculator",
    "odds",
    "casino"
  ],
  "author": "Blackjack Helper Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.blackjackhelper.app",
    "productName": "Blackjack Helper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "app/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
