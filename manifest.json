{
  "manifest_version": 3,
  "name": "Blackjack Helper",
  "version": "1.0.0",
  "description": "A real-time assistant for online blackjack players",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/logic.js", "scripts/content.js"],
      "css": ["styles/overlay.css"]
    }
  ]
}
