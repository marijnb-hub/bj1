{
  "manifest_version": 3,
  "name": "Blackjack Helper",
  "version": "1.0",
  "description": "Deze extensie werkt op elke willekeurige website om blackjack te helpen.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  }
}